          "label": "Link"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary_1",
          "default": false,
          "label": "Style"
        },
        {
          "type": "text",
          "id": "button_label_2",
          "default": "Button label",
          "label": "Label 2"
        },
        {
          "type": "url",
          "id": "button_link_2",
          "label": "Link 2"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary_2",
          "default": false,
          "label": "Style 2"
        }
      ]
    },
    {
      "type": "custom-block",
      "name": "Custom Block",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "custom_heading_1",
          "default": "Heading",
          "label": "Heading 1"
        },
        {
          "type": "inline_richtext",
